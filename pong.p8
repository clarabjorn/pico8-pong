function init_menu()
 title="pong"
 author="clara"
 player_count = 1
end

function update_menu()
 if btnp(⬆️) then
  player_count =1
 elseif btnp(⬇️) then
  player_count =2
 end
 
 if btnp(❎) then
  game_mode="game"
 end
end

function draw_menu()
 print(title, 60, 20, 8)
 
 print("spillere", 56, 26, 8)
 local col1=2
 local col2=8
 if player_count == 2 then
 	col2 = 2
 	col1 = 8
 end
 print("en spiller", 50, 55, col1)
 print("to spillere", col2)
 print("af "..author, 55,100)
end


