--bat

function update_bat(b)
	if btn(⬅️,b.ctrl) then
		b.x-=b.spd
	elseif btn(➡️,b.ctrl) then
	 b.x+=b.spd
	end
	
	if b.x < 0 then
		b.x = 0
	end
	
	if b.x + b.b > 127 then
		b.x = 127 - b.b
	end
end

function draw_bat(b)
	rectfill(
	 b.x,b.y,
	 b.x+b.b,
	 b.y+b.h,
	 b.col)
end
